    <tr>
        <th>
            Title:
        </th>
        <td>
            <%= @book.title %>
        </td>
    </tr>
    <tr>
        <th>
            Author:
        </th>
        <td>
            <%= @book.author %>
        </td>
    </tr>
    <tr>
        <th>
